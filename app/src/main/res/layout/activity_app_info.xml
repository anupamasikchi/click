<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.click.rollingstone.click2.AppInfo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="How Stuff Works!!!"
        android:id="@+id/textView1"
        android:layout_marginBottom="@dimen/abc_action_bar_overflow_padding_end_material"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="App to catch people, red handed, trying to access your phone without permissions."
        android:id="@+id/textView2"
        android:layout_marginBottom="@dimen/abc_action_bar_overflow_padding_end_material"
        android:layout_below="@+id/textView1"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Smart Eye - Intrusion Catch is a simple app that captures an image when incorrect password is provided to unlock the phone. An email, with the captured image attached, is then sent to the user's primary email address registered on Google Play services.

So next time you loose your phone somewhere and cant find it don't worry. We will catch any unauthorized access to your phone and send an email to you if a wrong password is entered. The email would contain an image which was taken at the moment of unauthorized access. That could lead you to your phone."
        android:id="@+id/textView3"
        android:layout_marginBottom="@dimen/abc_action_bar_overflow_padding_end_material"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true" />
</RelativeLayout>
